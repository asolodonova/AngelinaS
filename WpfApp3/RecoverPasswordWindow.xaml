<Window x:Class="WpfApp3.RecoverPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="RecoverPasswordWindow" Height="450" Width="250">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFFFACA2" Offset="1"/>
                <GradientStop Color="#FFF8E68F" Offset="0.582"/>
                <GradientStop Color="#FFFFE69B" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="10,251,0,0" VerticalAlignment="Top" Click="Button_Click" Foreground="Black" Background="#FFFAA49A" Width="120" BorderBrush="#FFF8E68F"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,29,0,0" TextWrapping="Wrap" Text="Забыл пароль" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift SemiBold Condensed">
            <TextBlock.Foreground>
                <SolidColorBrush Color="#FFFAA49A"/>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,104,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,179,0,0" TextWrapping="Wrap" Text="Новый пароль" VerticalAlignment="Top" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Margin="10,128,0,0" TextWrapping="Wrap" Text="введите логин" VerticalAlignment="Top" Width="120" Background="#FFF8E68F" BorderBrush="#FFFFACA2" Foreground="#FFFFACA2" FontWeight="Bold" SelectionBrush="#FFFFACA2" SelectionTextBrush="#FFFAA49A" TextChanged="TextBox_TextChanged"/>
        <PasswordBox HorizontalAlignment="Left" Margin="10,203,0,0" VerticalAlignment="Top" Width="120" Background="#FFFFE69B" BorderBrush="#FFFAA49A" SelectionBrush="#FFFAA49A" SelectionTextBrush="#FFFAA49A" Foreground="#FFFAA49A"/>

    </Grid>
</Window>