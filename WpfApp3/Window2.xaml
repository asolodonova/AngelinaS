<Window x:Class="WpfApp3.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Добавить рецепт" Height="562" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0 5 0 15"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="SelectionBrush" Value="#FFFFE69B"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button" x:Key="MainButtonStyle">
            <Setter Property="Background" Value="#FFFFE69B"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Margin" Value="0 20 0 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE6D282"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD1C070"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FFFAA49A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="ДОБАВИТЬ РЕЦЕПТ" 
                   HorizontalAlignment="Center"
                   Margin="0 20"
                   TextWrapping="Wrap" 
                   FontSize="28" 
                   FontFamily="Bahnschrift SemiBold Condensed" 
                   Foreground="#FFFFE69B"/>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20 0" Margin="0,0,0,31">
            <StackPanel>
                <!-- Название рецепта -->
                <TextBlock Text="Название рецепта" 
                           FontSize="14"
                           Foreground="White"/>
                <TextBox/>

                <!-- Категория -->
                <TextBlock Text="Категория" 
                           FontSize="14"
                           Foreground="White"/>
                <TextBox/>

                <!-- Время приготовления -->
                <TextBlock Text="Время приготовления (мин)" 
                           FontSize="14"
                           Foreground="White"/>
                <TextBox/>

                <!-- Ингредиенты -->
                <TextBlock Text="Ингредиенты" 
                           FontSize="14"
                           Foreground="White"/>
                <TextBox AcceptsReturn="True" 
                         Height="60"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>

                <!-- Описание -->
                <TextBlock Text="Описание" 
                           FontSize="14"
                           Foreground="White"/>
                <TextBox AcceptsReturn="True" 
                         Height="100"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка внизу -->
        <Button Grid.Row="2" 
                Content="Вернуться в меню" 
                HorizontalAlignment="Center"
                Style="{StaticResource MainButtonStyle}"
                Click="Button_Click" Margin="0,0,0,13" Height="21" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
